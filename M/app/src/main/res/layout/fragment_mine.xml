<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/moccasin"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/mine_setting"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:drawableRight="@mipmap/icon_setting"
            android:layout_height="@dimen/dp40" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mine_fresco"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        fresco:placeholderImage="@mipmap/ic_denglu"
        fresco:roundAsCircle="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击登录即可发表评论"
        android:layout_marginTop="@dimen/dp30"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp30">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@mipmap/ic_grey_heart"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="收藏"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="1dp"
            android:background="@color/lightgrey"
            android:layout_height="@dimen/dp20" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp10"
            android:drawableRight="@mipmap/ic_action_reply_grey_without_padding"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="评论"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/lightgrey"
        android:layout_height="1dp">
    </View>
    <TextView
        android:layout_width="match_parent"
        android:text="我的缓存"
        android:layout_marginTop="@dimen/dp50"
        android:gravity="center"
        android:layout_height="@dimen/dp40" />
    <TextView
        android:layout_width="match_parent"
        android:text="观看记录"
        android:gravity="center"
        android:layout_height="@dimen/dp40" />
    <TextView
        android:layout_width="match_parent"
        android:text="意见反馈"
        android:gravity="center"
        android:layout_height="@dimen/dp40" />




</LinearLayout>
